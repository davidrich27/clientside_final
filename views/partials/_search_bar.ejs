<!-- Search Bar -->
<link rel="stylesheet" href="./stylesheets/_search_bar.css">

<br>
<div class="container">
	<div class="row">
		<div class="col-md-12">
            <div class="input-group" id="adv-search">
                <input name="generalTerm" type="text" class="form-control" placeholder="Search for Event" />
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <div class="dropdown dropdown-lg">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                <form class="form-horizontal" role="form">
                                  <div class="form-group">
                                    <label for="eventTerm">Event/Artist/Act Name</label>
                                    <input id="eventTerm" name="eventTerm" class="form-control" type="text" />
                                  </div>
                                  <div class="form-group">
                                    <label for="venueTerm">Venue</label>
                                    <input id="venueTerm" name="venueTerm" class="form-control" type="text" />
                                  </div>
                                  <div class="form-group">
                                    <label for="tagTerm">Category/Tag</label>
                                    <input id="tagTerm" name="tagTerm" class="form-control" type="text" />
                                  </div>
                                  <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true" onclick="searchQuery(true)"></span></button>
                                </form>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true" onclick="searchQuery()"></span></button>
                    </div>
                </div>
            </div>
          </div>
        </div>
	</div>
</div>
